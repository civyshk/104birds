<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout android:tag="title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.project104.civyshkbirds.ImageViewScaling
            android:tag="image"
            android:layout_width="@dimen/cc_icon_size"
            android:layout_height="@dimen/cc_icon_size"
            android:layout_marginBottom="@dimen/cc_icon_margin_vertical"
            android:layout_marginTop="@dimen/cc_icon_margin_vertical"
            android:layout_marginLeft="@dimen/cc_icon_margin_horizontal"
            android:layout_marginRight="@dimen/cc_icon_margin_horizontal"
            android:src="@drawable/icon_cc_main"
            android:scaleType="fitCenter"/>

        <TextView android:tag="text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textColorLink="@color/link"
            android:textSize="@dimen/font_size_small"/>

    </LinearLayout>

    <LinearLayout android:tag="attribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.project104.civyshkbirds.ImageViewScaling
            android:tag="image"
            android:layout_width="@dimen/cc_icon_size"
            android:layout_height="@dimen/cc_icon_size"
            android:layout_marginBottom="@dimen/cc_icon_margin_vertical"
            android:layout_marginTop="@dimen/cc_icon_margin_vertical"
            android:layout_marginLeft="@dimen/cc_icon_margin_horizontal"
            android:layout_marginRight="@dimen/cc_icon_margin_horizontal"
            android:src="@drawable/icon_cc_by"
            android:scaleType="fitCenter"/>

        <TextView android:tag="text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/attribution"
            android:textSize="@dimen/font_size_small"/>

    </LinearLayout>

    <LinearLayout android:tag="shareAlike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <net.project104.civyshkbirds.ImageViewScaling
            android:tag="image"
            android:layout_width="@dimen/cc_icon_size"
            android:layout_height="@dimen/cc_icon_size"
            android:layout_marginBottom="@dimen/cc_icon_margin_vertical"
            android:layout_marginTop="@dimen/cc_icon_margin_vertical"
            android:layout_marginLeft="@dimen/cc_icon_margin_horizontal"
            android:layout_marginRight="@dimen/cc_icon_margin_horizontal"
            android:src="@drawable/icon_cc_sa"
            android:scaleType="fitCenter"/>

        <TextView android:tag="text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/share_alike"
            android:textSize="@dimen/font_size_small"/>

    </LinearLayout>

</LinearLayout>